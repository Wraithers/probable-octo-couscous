{
  "services": [
    {
      "name": "affine_server",
      "image": "ghcr.io/toeverything/affine-graphql:stable",
      "isMain": true,
      "command": ["sh", "-c", "node ./scripts/self-host-predeploy && node ./dist/index.js"],
      "environment": {
        "AFFINE_CONFIG_PATH": "/root/.affine/config",
        "REDIS_SERVER_HOST": "affine-redis",
        "DATABASE_URL": "postgresql://affine:${AFFINE_POSTGRES_PASSWORD}@affine-postgres:5432/affine",
        "AFFINE_ADMIN_EMAIL": "${AFFINE_ADMIN_EMAIL}",
        "AFFINE_ADMIN_PASSWORD": "${AFFINE_ADMIN_PASSWORD}",
        "TELEMETRY_ENABLE": "${AFFINE_TELEMETRY_ENABLE}",
        "AFFINE_INDEXER_ENABLED": "false",
        "AFFINE_SERVER_EXTERNAL_URL": "https://projects.int.hotcinnamon.ing"
      },
      "internalPort": 3010,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/root/.affine/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/root/.affine/storage",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "1000m"
        }
      },
      "dependsOn": {
        "affine-redis": {
          "condition": "service_healthy"
        },
        "affine-postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "affine-redis",
      "image": "redis",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "redis-cli PING || exit 1",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "affine-postgres",
      "image": "pgvector/pgvector:pg16",
      "environment": {
        "POSTGRES_USER": "affine",
        "POSTGRES_PASSWORD": "${AFFINE_POSTGRES_PASSWORD}",
        "POSTGRES_DB": "affine",
        "POSTGRES_INITDB_ARGS": "--data-checksums"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U affine -d affine || exit 1",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    }
  ]
}